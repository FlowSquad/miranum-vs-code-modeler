{
  "name": "vs-code-bpmn-modeler",
  "displayName": "vs-code-bpmn-modeler",
  "description": "BPMN Modeler for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:bpmn-modeler"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "id": "bpmn-modeler",
        "viewType": "bpmn-modeler",
        "displayName": "BPMN Modeler",
        "selector": [
          {
            "filenamePattern": "*.bpmn"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "tsup --env.NODE_ENV production",
    "dev": "tsup --watch",
    "watch": "tsup src/extension.ts --dts --external=vscode --sourcemap",
    "lint": "eslint src --ext ts",
    "dev-client": "vite build --config ./bpmn-modeler/vite.config.js --watch"
  },
  "dependencies": {
    "@bpmn-io/properties-panel": "^0.23.0",
    "bpmn-js": "^10.2.0",
    "bpmn-js-properties-panel": "^1.9.0",
    "jquery": "^3.6.1"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "tsup": "^6.2.3",
    "typescript": "^4.5.5",
    "vite": "^3.1.5",
    "vite-plugin-static-copy": "^0.7.0"
  }
}
